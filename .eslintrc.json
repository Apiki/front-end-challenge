{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/function-component-definition": [1, {
        "namedComponents": "arrow-function",
        "unnamedComponents": "function-expression"
      }],
      "react/no-danger": 0
    }
}
